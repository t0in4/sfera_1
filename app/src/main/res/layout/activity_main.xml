<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/maincolor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/borderline"
        android:layout_width="0dp"
        android:layout_height="24dp"

        android:background="@color/black"
        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat

            android:layout_width="46dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/top_rectangle"
                android:clickable="true"

                />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/top_circle"
                android:clickable="true"/>

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/top_reverse_triangle"
                android:pivotX="50"
                android:pivotY="50"
                android:rotation="180"
                android:clickable="true"/>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--hamburger-->
    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/hamburger"
        android:layout_width="18dp"
        android:layout_height="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/hamburger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--ID-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="125dp"
        android:layout_height="24dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/hamburger"
        app:layout_constraintTop_toBottomOf="@+id/borderline"
        >

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Share-->

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/share"
        android:layout_width="18dp"
        android:layout_height="19.92dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18.04dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/share"





        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/borderline">


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>